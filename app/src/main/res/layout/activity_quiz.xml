<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punkty: 0"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textQuestionsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pytanie 1 / x"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textScore"/>

    <TextView
        android:id="@+id/textTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        android:textColor="#00BDD9"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textQuestionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pytania będa pojawiać się w tym miejścu.\n Pytania będa pojawiać się w tym miejścu. "
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_textview"
        android:layout_below="@id/textQuestionsCount"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textQuestionContent"
        android:layout_centerVertical="true" >

        <RadioButton
            android:id="@+id/firstAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pierwsza opcja"
            android:buttonTint="#00BDD9"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/secondAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Druga opcja"
            android:buttonTint="#00BDD9"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/thirdAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trzecia opcja"
            android:buttonTint="#00BDD9"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/fourthAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czwarta opcja"
            android:buttonTint="#00BDD9"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Potwierdź"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button" />

</RelativeLayout>